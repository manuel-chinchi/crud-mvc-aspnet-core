@model IEnumerable<crud_mvc.Models.Category>

@{
    ViewData["Title"] = "Lista de categorías";
}

<partial name="_AlertNotify"/>

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>
<div>
    <a class="btn btn-success btn-sm px-3" asp-controller="Category" asp-action="Create">Agregar</a>
</div>
<br />
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="row">#</th>
                <th>Nombre</th>
                <th>Artículos relacionados</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Articles.Count</td>
                    @if (category.Articles.Count == 0)
                    {
                        <td class="py-1">
                            <partial name="_ActionButtons" model="@category"/>
                        </td>
                    }
                    else
                    {
                        <td class="py-1">No disponible</td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.Count()</p>
</div>
