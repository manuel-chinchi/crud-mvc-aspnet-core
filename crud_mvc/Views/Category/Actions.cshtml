@model crud_mvc.Models.Category

<!-- Button trigger modal -->
<a class="btn btn-danger btn-sm text-white" data-toggle="modal" data-target="#modal_delete_@{@Model.Id}" id="inputTrigger">Eliminar</a>
<!-- Modal -->
<div class="modal fade" id="modal_delete_@{@Model.Id}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">
                    Borrar categoría
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea eliminar la categoría <strong>@Model.Name</strong>?
            </div>
            <br />
            <form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Delete" name="id" value="@Model.Id">Aceptar</button>
                </div>
            </form>
        </div>
    </div>
</div>