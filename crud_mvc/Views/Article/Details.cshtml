@model crud_mvc.Models.Article

@{
    ViewBag.Title = "Detalles de artículo";
}

<h3>@ViewBag.Title</h3>
<hr />
<div style="width: 300px;">
    <form>
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control form-control-sm" value="@Model.Name" readonly />
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <input type="text" class="form-control form-control-sm" value="@Model.Category" readonly />
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <textarea typeof="text" class="form-control form-control-sm" readonly>@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <input type="number" class="form-control form-control-sm" value="@Model.Quantity" readonly/>
        </div>
        <br />
        <button type="submit" class="btn btn-secondary btn-sm" asp-controller="Article" asp-action="ListDetails">Volver</button>
    </form>
</div>
