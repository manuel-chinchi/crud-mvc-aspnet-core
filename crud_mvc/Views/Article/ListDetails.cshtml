@model List<crud_mvc.Models.Article>

@{
    ViewBag.Title = "Lista de artículos";
}

<partial name="_AlertNotify" />

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>
<div>
    <form>
        <button type="submit" class="btn btn-success btn-sm px-3" asp-controller="Article" asp-action="Create">Agregar</button>
    </form>
</div>
<br />
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="row">#</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Article article in Model)
            {
                <tr>
                    <th scope="row">@article.Id</th>
                    <td>@article.Name</td>
                    <td>@article.Category.Name</td>
                    <td>@article.Description</td>
                    <td>@article.Quantity</td>
                    <td class="py-1">
                        <form>
                            <button class="btn btn-primary btn-sm px-3" asp-controller="Article" asp-action="Edit" name="id" value="@article.Id">Editar</button>
                            <button class="btn btn-success btn-sm" asp-controller="Article" asp-action="Details" name="id" value="@article.Id">Detalles</button>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal_delete_@{@article.Id}" id="inputTrigger">Eliminar</button>
                        </form>
                        <!-- Modal -->
                        <div class="modal fade" id="modal_delete_@{@article.Id}" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">
                                            Borrar artículo
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Desea eliminar el artículo <strong>@article.Name</strong>?
                                    </div>
                                    <br />
                                    <form>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                                            <button class="btn btn-primary btn-sm" asp-controller="Article" asp-action="Delete" name="id" value="@article.Id">Aceptar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.Count</p>
</div>