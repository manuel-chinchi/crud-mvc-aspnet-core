@model Article

@{
    ViewBag.Title = "Editar articulo";
}

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>
<br />
<div style="width: 300px;">
    <form asp-action="Edit">
        <input hidden value="@Model.Id" name="id" />
        <input hidden value="@Model.CategoryId" name="categoryid" />
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" value="@Model.Name" name="name" />
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <select class="form-control" name="category.name">
                @foreach (Category item in ViewBag.Categories)
                {
                    if (item.Name == Model.Category.Name)
                    {
                        <option selected>@item.Name</option>
                    }
                    else
                    {
                        <option>@item.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <textarea typeof="text" class="form-control" name="description">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <input type="number" class="form-control" value="@Model.Quantity" name="quantity" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>