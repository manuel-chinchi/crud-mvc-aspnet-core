@{ 
// TODO 3: Modelo que recibe la vista es de tipo 'ArticleModel'. Lo manejo mediante la variable 'Model' con razor.
}
@model ArticleModel

@{
    ViewBag.Title = "Editar articulo";
}

<h3>@ViewBag.Title</h3>
<br />
<div style="width: 300px;">
    <form asp-action="Edit">
        <input hidden value="@Model.Id" name="id"/>
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" value="@Model.Name" name="name"/>
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <select class="form-control" name="category">
                <option selected>@Model.Category</option>
                <option>Muebles</option>
                <option>Electrodomesticos</option>
                <option>Herramientas</option>
            </select>
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <textarea typeof="text" class="form-control" name="description">@Model.Description</textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>