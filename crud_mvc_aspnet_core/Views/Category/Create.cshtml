@model crud_mvc_aspnet_core.Models.Category

@{
    ViewData["Title"] = "Crear categoría";
}

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>
<hr />
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-10">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary btn-sm px-3">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
